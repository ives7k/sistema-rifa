# ==============================================
# VARIÁVEIS DE AMBIENTE - SISTEMA DE RIFA
# ==============================================
# Copie para o Cloudflare Pages em Settings > Environment Variables
# Ou copie para .env.local para desenvolvimento local

# ----------------------------------------------
# SUPABASE
# ----------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=<SUA_URL_SUPABASE>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<SUA_ANON_KEY>
SUPABASE_SERVICE_ROLE_KEY=<SUA_SERVICE_ROLE_KEY>

# ----------------------------------------------
# AUTENTICAÇÃO
# ----------------------------------------------
ADMIN_SESSION_SECRET=<GERAR_TOKEN_32_CARACTERES>
CLIENT_SESSION_SECRET=<GERAR_TOKEN_32_CARACTERES>
ADMIN_TOKEN=<SEU_TOKEN_ADMIN>

# ----------------------------------------------
# PAGAMENTO (SKALEPAY)
# ----------------------------------------------
SKALEPAY_SECRET_KEY=<SUA_CHAVE_SKALEPAY>
WEBHOOK_TOKEN=<SEU_WEBHOOK_TOKEN>

# ----------------------------------------------
# OPCIONAIS
# ----------------------------------------------
# WEBHOOK_REQUIRE_SIGNATURE=false
